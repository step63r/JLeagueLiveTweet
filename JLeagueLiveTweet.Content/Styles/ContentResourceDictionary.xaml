<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="ClockLineBase" TargetType="Line">
        <Setter Property="X1" Value="100" />
        <Setter Property="Y1" Value="0" />
        <Setter Property="X2" Value="100" />
        <Setter Property="Y2" Value="10" />
        <Setter Property="Stroke" Value="Black" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    <Style x:Key="ThickLine" TargetType="Line" BasedOn="{StaticResource ClockLineBase}">
        <Setter Property="StrokeThickness" Value="5" />
    </Style>
    <Style x:Key="ThinLine" TargetType="Line" BasedOn="{StaticResource ClockLineBase}">
        <Setter Property="StrokeThickness" Value="2" />
    </Style>
</ResourceDictionary>